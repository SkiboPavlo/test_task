<h3>Editing Project</h3>

<%= form_for(@project) do |f| %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :user_id %>
  <%= f.select :user_id, User.all.collect {|p| [ p.email, p.id ] } %>
</div>

<%= f.submit "Update", class: 'btn btn-default' %>
<%= link_to 'Show', @project, class: 'btn btn-default' %>
<%= link_to 'Back', projects_path, class: 'btn btn-default' %>
<% end %>
