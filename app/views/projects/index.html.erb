<div class="col-md-6">
  <h2>Projects</h2>

  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>User_email</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.title %></td>
          <td><%= project.user.email %></td>
          <td><%= link_to 'All Tag', project_tags_path(project),
            class: 'btn btn-primary' %></td>
          <td><%= link_to 'All Task_list', project_task_lists_path(project),
          class: 'btn btn-primary' %></td>
          <td><%= link_to 'Show', project_path(project), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', project, method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

</div>

