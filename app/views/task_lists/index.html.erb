<div class="col-md-3">
<h2>Task_lists</h2>
  <%= link_to 'New Task_list', new_project_task_list_path, class: 'btn btn-primary' %>
  <%= link_to 'All Projects', projects_path, class: 'btn btn-primary' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Project_id</th>
      </tr>
    </thead>

    <tbody>
      <% @task_lists.each do |task_list| %>
        <tr>
          <td><%= link_to task_list.title, task_list_tasks_path(task_list) %></td>
          <td><%= link_to task_list.project_id, project_task_lists_path(@project) %></td>
          <td><%= link_to 'Show', task_list_path(task_list), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_task_list_path(task_list),
          class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', task_list_path(task_list), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
