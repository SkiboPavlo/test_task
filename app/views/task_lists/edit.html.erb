<h1>Editing Task_list</h1>

<%= form_for @project, edit_project_task_list_path(@project, @task_list) do |f| %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :project_id %>
  <%= f.number_field :project_id %>
</div>

<%= f.submit "Update", class: 'btn btn-default' %>
<%= link_to 'Show', project_task_list_path, class: 'btn btn-default' %>
<%= link_to 'Back', project_task_lists_path, class: 'btn btn-default' %>
<% end %>
