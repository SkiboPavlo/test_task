<div class="col-md-4">
  <div class="form-horizontal">
    <h1>Editing Tag</h1>

    <%= form_for @tag, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :project_id %>
          <%= f.select :project_id, Project.all.collect {|p| [ p.title, p.id ] } %>

          <%= f.label :task_id %>
          <%= f.select :task_id, Task.all.collect {|t| [ t.title, t.id ] } %>
        </div>
      </div>

      <%= f.submit 'Update', class: 'btn btn-primary' %>
      <%= link_to 'Show', project_tag_path, class: 'btn btn-primary' %>
      <%= link_to 'Back', project_tags_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

