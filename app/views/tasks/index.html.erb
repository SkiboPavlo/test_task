<div class="col-md-8">
<h2>Tasks</h2>
  <%= link_to 'New Task', new_task_list_task_path, class: 'btn btn-primary' %>
  <%= link_to 'All Projects', projects_path, class: 'btn btn-primary' %>
  <%= link_to 'All Task_lists', project_task_lists_path(@task_list.project), class: 'btn btn-primary' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>User email</th>
        <th>Assigned to user</th>
        <th>Task list id</th>
        <th>Tag</th>
        <th>Uploaded files</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.title %></td>
          <td><%= link_to task.description %></td>
          <td><%= link_to task.user.email %></td>
          <td><%= link_to task.assignee.email %></td>
          <td><%= link_to task.task_list_id %></td>
          <td><%= task.tags.map {|p| p.title }.join(", ") %>
          <td><%= link_to "Document", task.attachment_url %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% @tasks.each do |f| %>
<div id="page_wrapper">

        <div id="profile_image">
            <%= image_tag(f.attachment.url) %>
        </div>
<br>
<% end %>

</div>
