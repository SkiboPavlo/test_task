<div class="col-md-3">
<h2>Tasks</h2>
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>user_id</th>
        <th>assignee_id</th>
        <th>task_list_id</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.title, task_path(task) %></td>
          <td><%= link_to task.description, task_path(task) %></td>
          <td><%= link_to task.user_id, task_path(task) %></td>
          <td><%= link_to task.assignee_id, task_path(task) %></td>
          <td><%= link_to task.task_list_id, task_path(task) %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

