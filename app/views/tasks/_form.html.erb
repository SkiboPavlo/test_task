<div class="col-md-4">
  <div class="form-horizontal">

    <%= form_for @task,  html: {class: "nifty_form"} do |f| %>
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :user_id %>
          <%= f.select :user_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :assignee_id %>
          <%= f.select :assignee_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :task_list_id %>
          <%= f.select :task_list_id, TaskList.all.collect {|p| [ p.title, p.id ]} %>

          <%= f.label :attachment %>
          <%= f.file_field :attachment %>

          <%= collection_check_boxes(:task, :tag_ids, @tag, :id, :description) %>
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
