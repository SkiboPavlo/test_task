<div class="col-md-4">
  <div class="form-horizontal">
    <h1>Editing Task</h1>

    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :user_id %>
          <%= f.select :user_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :assigne_id %>
          <%= f.number_field :assignee_id %>

          <%= f.label :task_list_id %>
          <%= f.select :task_list_id, TaskList.all.collect {|p| [ p.title, p.id ] } %>
        </div>
      </div>

      <%= f.submit "Update", class: 'btn btn-primary' %>
      <%= link_to 'Show', @task, class: 'btn btn-primary' %>
      <%= link_to 'Back', tasks_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

