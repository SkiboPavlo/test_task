<div class="col-md-4">
  <div class="form-horizontal">
    <h1>Editing Task</h1>

    <%= form_for @task do |f| %>
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :user_id %>
          <%= f.select :user_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :assignee_id %>
          <%= f.select :assignee_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :task_list_id %>
          <%= f.select :task_list_id, TaskList.all.collect {|p| [ p.title, p.id ]} %>

          <%= f.label :attachment %>
          <%= f.file_field :attachment %>

          <%= collection_check_boxes(:task, :tag_ids, @tags, :id, :title) %>
        </div>
      </div>

      <%= f.submit "Update", class: 'btn btn-primary' %>
      <%= link_to 'Show', task_path, class: 'btn btn-primary' %>
      <%= link_to 'Back', task_list_tasks_path(@task.task_list), class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
