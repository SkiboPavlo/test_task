<div class="col-md-4">
  <div class="form-horizontal">
    <h1>New Task</h1>

    <%= form_for @task, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label :task_list_id %>
          <%= f.select :title, TaskList.all.collect {|p| [ p.title, p.id ]} %>

          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :user_id %>
          <%= f.select :user_id, User.all.collect {|p| [ p.email, p.id ] } %>

          <%= f.label :assignee_id %>
          <%= f.select :assignee_id, User.all.collect {|p| [ p.email, p.id ] } %>
        </div>
      </div>

      <%= f.submit "Create", class: 'btn btn-primary' %>
      <%= link_to 'Back', task_list_tasks_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

